<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="myName"
            type="com.example.exer5.MyName" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@={myName.name}"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/hello_guide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Hello!"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/name_guide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name "
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/name_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Enter name here."
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/nickname_guide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nickname"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/nickname_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Enter nickname here."
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/age_guide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/age_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Enter age here."
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/birthday_guide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="When is your birthday?"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/birthday_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Enter birthday here."
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/phone_guide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/phone_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Enter phone number here."
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/email_guide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What is your email address?"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/email_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Enter email address here."
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/course_guide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What is your course? "
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/course_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Enter course here."
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/dream_guide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What is your dream?"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/dream_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Enter dream here."
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/crush_guide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Who is your ultimate crush?"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/crush_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Enter name of crush here."
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/message_guide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name  your message for me?"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/message_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/darker_gray" />

                <Button
                    android:id="@+id/done_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Done" />
            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</layout>